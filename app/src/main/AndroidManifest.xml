<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.santeh.petone.crm"
          xmlns:android="http://schemas.android.com/apk/res/android">


    <!--GPS-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.LOCATION_HARDWARE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <!--READ WRITE-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- PHONE STATUS AND INTERNET-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--MISC-->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".Obj.Var"
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>

        <activity
            android:name=".Main.MapsActivity"
            android:label="@string/title_activity_maps">
        </activity>

        <activity
            android:name=".Main.Activity_ClientUpdates"
            android:label="Client Updates">
        </activity>

        <activity
            android:name=".Main.Activity_Add_ClientInfo"
            android:label="Client Information">
        </activity>

        <activity
            android:name=".Main.Activity_Edit_ClientInfo"
            android:label="Client Edit Clientinfo">
        </activity>

        <activity
            android:name=".Main.Activity_Unsynched_Data"
            android:label="Unsynced Data">
        </activity>

        <activity
            android:name=".Main.Activity_Unsynched_ClientInfo"
            android:label="Unsynced Client Info">
        </activity>

        <activity
            android:name=".Main.Activity_Unsynched_ClientUpdates"
            android:label="Unsynced Client Updates">
        </activity>

        <activity
            android:name=".Main.Activity_Settings"
            android:label="Settings">
        </activity>

        <activity
            android:name=".Main.Activity_LoginScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
