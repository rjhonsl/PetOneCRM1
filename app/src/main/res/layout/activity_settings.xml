<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll_titlebar"
        android:background="@color/teal_500"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:layout_weight="1"
            android:background="@drawable/bg_material_transparent"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_width="0dp"
            android:id="@+id/btn_title_left"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Settings"
            android:gravity="center"
            android:id="@+id/title"
            android:textSize="19sp"
            android:layout_weight="12"
            android:padding="10dp"
            android:textColor="@color/background_material_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


        <ImageButton
            android:layout_weight="1"
            android:background="@drawable/bg_material_transparent"
            android:src="@drawable/ic_filler24dp"
            android:layout_width="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/btn_title_right"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_below="@id/ll_titlebar"
                  android:layout_above="@+id/ll_bottom_postall"
                  android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/gray_800"
            android:text="BACK UP &amp; RESTORE"
            />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingTop="15dp"
                      android:paddingBottom="15dp"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:background="@drawable/bg_material_transparent_gray_pressed"
                      android:id="@+id/ll_restore"
            >

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="      Restore Data from Server"
                      android:layout_gravity="center_vertical"
                      android:gravity="center_vertical"
                      android:drawableLeft="@drawable/ic_cloud_download_black_24dp"
                      android:textColor="@color/gray_700"
                      android:padding="10dp"
                      android:layout_weight="1"
                />


        </LinearLayout>

        <View android:layout_width="match_parent" android:background="@color/gray_300" android:layout_height="1dp"/>



        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingTop="15dp"
                      android:paddingBottom="15dp"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:background="@drawable/bg_material_transparent_gray_pressed"
                      android:id="@+id/ll_export_local"
            >

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="      Back up(Local)"
                      android:drawableLeft="@drawable/ic_vertical_align_top_black_24dp"
                      android:layout_gravity="center_vertical"
                      android:gravity="center_vertical"
                      android:textColor="@color/gray_700"
                      android:padding="10dp"
                      android:layout_weight="1"
                />


        </LinearLayout>

        <View android:layout_width="match_parent" android:background="@color/gray_300" android:layout_height="1dp"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingTop="15dp"
                      android:paddingBottom="15dp"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:background="@drawable/bg_material_transparent_gray_pressed"
                      android:id="@+id/ll_import_local"
            >

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="      Restore(Local)"
                      android:drawableLeft="@drawable/ic_vertical_align_bottom_black_24dp"
                      android:layout_gravity="center_vertical"
                      android:gravity="center_vertical"
                      android:textColor="@color/gray_700"
                      android:padding="10dp"
                      android:layout_weight="1"
                />


        </LinearLayout>

        <View android:layout_width="match_parent" android:background="@color/gray_300" android:layout_height="1dp"/>


    </LinearLayout>


</RelativeLayout>
