<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:gravity="center_horizontal"
              android:weightSum="1">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        >
        <TextView
            android:gravity="center_vertical|left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:background="@color/deepteal_400"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="SAMPLE TITLE"
            android:drawableRight="@drawable/ic_info_white_24dp"
            android:id="@+id/dialog_okonly_title"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal">

        <TextView android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:padding="5dp"
                  android:textColor="@color/gray_900"
                  android:textSize="14sp"
                  android:id="@+id/txt_message"
            android:text="Select an the info you want to put on this location. \n\nLat. 14.12521\nLng.120.125412"/>

        <View android:layout_width="fill_parent" android:layout_height="1dp"
            android:background="@color/deepteal_300"/>
        <ListView
            android:id="@+id/dialog_list_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/material_blue_grey_800"
            />
        <View android:layout_width="fill_parent" android:layout_height="1dp"
              android:background="@color/deepteal_300"/>

    </LinearLayout>


</LinearLayout>