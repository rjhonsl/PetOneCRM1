<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- if pressed -->
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/gray_300"
                android:endColor="@color/gray_300"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
    <item android:state_enabled="false"> <!-- if pressed -->
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#c8dad4"
                android:endColor="#c8dad4"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00ffffff"
                android:endColor="#00000000"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
</selector>