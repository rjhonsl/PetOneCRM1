<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!-- if pressed -->
        <shape android:shape="oval">
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/red_material_700"
                />
            <gradient
                android:startColor="@color/red_material_700"
                android:endColor="@color/red_material_700"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>

    <item android:state_enabled="false"> <!-- if disabled -->
        <shape android:shape="oval">
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/gray_500"
                />
            <gradient
                android:startColor="@color/gray_500"
                android:endColor="@color/gray_500"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/red_material_400"
                />
            <gradient
                android:startColor="@color/red_material_400"
                android:endColor="@color/red_material_400"
                android:type="linear"
                android:angle="315">
            </gradient>
        </shape>
    </item>
</selector>